							<div class="">
							 	<label>Email</label>
							</div>
							<div>
								<!--<input type="email" placeholder="Email" class="form-control">-->
								<%= f.email_field :email, class: "form-control"%>
							</div>	
						</div>	
						</div>
					</div>
					<div class="row col-lg-12 fields">
					<div class="col-lg-4"></div>
					<div class="col-lg-4">
						
						<div class="col-lg-12">
							<div class="">
							 	<label>Current Password</label>
							</div>
							<div>
								<input type="password" placeholder="Current Password" class="form-control" name="currentpassword">
								
							</div>	
						</div>	
						</div>
					</div>

					<div class="row col-lg-12 " style="margin-top:20px;">

				<div class="col-lg-4"></div>
				<div class="col-lg-4 fields">
						<div class="col-lg-6">
						<div class="">
							 	<label>New Password</label>
							</div>
							<div>
								<!--<input id="myPassword" type="password" class="form-control" placeholder="New Password">-->
								<%= f.password_field :password, class: 'form-control', :id => 'myPassword' %>
							</div>	
						</div>
						
						
					
					<div class="col-lg-6">
						<div>
							<div>
								<label>Retype Password</label>
							</div>
							<div>
								<input type="password" placeholder="Retype Password" class="form-control">
							</div>	
						</div>
						
					</div>
				</div>
				<div class="col-lg-12 controls">
						
							<div class="col-lg-4"></div>
							<div class="col-lg-4" style="padding-left: 25px;padding-right: 25px;">
